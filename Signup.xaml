<Page x:Class="Library_Management_System.Signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Signup">

    <Grid>
        <Border CornerRadius="50" Background="White" Margin="78,13,78,31"/>
        <StackPanel Margin="103,26,99,48">
            <Label Content="Signup Page" FontSize="30" FontWeight="Bold" Width="206" Height="49"></Label>
            <StackPanel Height="56" Width="538">
                <Label Content="Full Name"/>
                <TextBox x:Name="txtname" FontSize="18" Width="479"></TextBox>
            </StackPanel>

            <StackPanel Height="61" Width="538">
                <Label Content="Emal"/>
                <TextBox x:Name="txtem" FontSize="18" Width="479"></TextBox>
            </StackPanel>

            <StackPanel Height="59" Width="538">
                <Label Content="Password"/>
                <PasswordBox x:Name="txtpass1" FontSize="18" Width="479"></PasswordBox>
            </StackPanel>

            <StackPanel Height="57" Width="538">
                <Label Content="Confirm Password"/>
                <PasswordBox x:Name="txtpass2" FontSize="18" Width="479"></PasswordBox>
            </StackPanel>
            <StackPanel Height="20" Orientation="Horizontal" Width="386">
                <RadioButton x:Name="o1" Content="Member" GroupName="UserRole"/>
                <RadioButton x:Name="o2" Content="Librarian" GroupName="UserRole"/>

            </StackPanel>
            <StackPanel Height="68" >
                <Button Content="Signup" Background="Green" FontWeight="Black" FontSize="25" Width="397" Click="Button_Click" Height="44" />

                <Button Content="I have Already an Account?" Width="395" Background="White" BorderBrush="White" HorizontalAlignment="Left" Click="Button_Click_1" />
            </StackPanel>


        </StackPanel>
    </Grid>
</Page>
