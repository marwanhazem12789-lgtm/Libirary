<Page x:Class="Library_Management_System.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">


        <Grid>
            <Border CornerRadius="50" Background="White" Margin="78,13,78,31"/>
            <StackPanel Margin="103,26,99,48">
                <Label Content="Login Page" FontSize="30" FontWeight="Bold" Width="206" Height="49"></Label>
                <StackPanel Height="56" Width="538">
                    <Label Content="Full Name"/>
                    <TextBox x:Name="txtname" FontSize="18" Width="479"></TextBox>
                </StackPanel>



            <StackPanel Height="59" Width="538">
                <Label Content="Password"/>
                <PasswordBox x:Name="txtpass1" FontSize="18" Width="479"></PasswordBox>
            </StackPanel>

            <StackPanel Height="146" >
                <Button Content="login" Background="Green" FontWeight="Black" Margin="45" FontSize="25" Width="397" Click="Button_Click" Height="44" />
            </StackPanel>


            </StackPanel>
        </Grid>

</Page>
