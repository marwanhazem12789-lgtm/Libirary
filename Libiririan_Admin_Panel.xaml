<Page x:Class="Library_Management_System.Libiririan_Admin_Panel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Libiririan_Admin_Panel">
    <Grid Margin="20">


        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Book Title:"/>
            <TextBox Name="txtTit" Margin="0,5,0,10"/>

            <TextBlock Text="Author"/>
            <TextBox Name="txtAuthor" Margin="0,5,0,10"/>

            <TextBlock Text="Quantity:"/>
            <TextBox Name="txtQuantity" Margin="0,5,0,10"/>

            <TextBlock Text="Category:"/>
            <TextBox Name="txtCategory" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add" Click="btnAdd_Click" Width="80" Margin="5" Background="Green" Foreground="White"/>
                <Button Content="Update" Click="btnUpdate_Click" Width="80" Margin="5" Background="Orange"/>
                <Button Content="Delete" Click="btnDelete_Click" Width="80" Margin="5" Background="Red" Foreground="White"/>
                <Button Content="search" Click="btnserach_Click" Width="80" Margin="5" Background="Blue" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Name="dgProducts" AutoGenerateColumns="True" IsReadOnly="True" 
              Margin="10,255,10,10"/>
    </Grid>
</Page>
