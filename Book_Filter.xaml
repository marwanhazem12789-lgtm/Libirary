<Page x:Class="Library_Management_System.Book_Filter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Book_Filter">

    <Grid>
        <StackPanel Margin="69,0,69,51" >
            <ComboBox Name="combo" FontSize="18" >
                <ComboBoxItem Content="All Books" IsSelected="True"/>
                <ComboBoxItem Content="Available Books"/>
                <ComboBoxItem Content="Borrowed Books"/>
            </ComboBox>

            <CheckBox x:Name="chec" Content="You Want A Book have a (Quantity > 0 )" Margin="55" ></CheckBox>
            <StackPanel Orientation="Horizontal" Height="50" Width="590">
                <RadioButton  Content="Programming" x:Name="o1" Width="100"/>
                <RadioButton x:Name="o2" Content="Database" Width="116"/>
                <RadioButton x:Name="o3" Content="Computer Science" Width="119"/>
                <RadioButton x:Name="o4" Content="AI" Width="117"/>
            </StackPanel>

            <Button Content="Apply Filter" Background="Silver" FontSize="30"
                    FontWeight="Bold" Width="277" HorizontalAlignment="Right" Margin="55" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
