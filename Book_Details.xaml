<Page x:Class="Library_Management_System.Book_Details"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Book_Details">

    <Grid>
<StackPanel Margin="84,10,84,59">
    <Label Content="Book Details Page" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

    <StackPanel Margin="10">
        <TextBlock Text="Book Title:" FontSize="14" Foreground="Gray"/>
        <TextBlock Text="{Binding Title}" FontSize="22" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <TextBlock Text="Author:" FontSize="14" Foreground="Gray"/>
        <TextBlock Text="{Binding Author}" FontSize="18" Margin="0,0,0,10"/>

        <TextBlock Text="Quantity Available:" FontSize="14" Foreground="Gray"/>
        <TextBlock Text="{Binding Quantity}" FontSize="18" Margin="0,0,0,10"/>
    </StackPanel>

    <Button x:Name="btnBorrow" Content="Borrow This Book" 
            Background="Black" Foreground="White" 
            FontSize="25" Height="63" Width="350" 
            Margin="20" Click="btnBorrow_Click" />
</StackPanel>
    </Grid>
</Page>
