<Page x:Class="Library_Management_System.Book_Borrow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Book_Borrow">
    <Grid>
        <StackPanel Margin="30">
            <TextBlock Text="My Borrowed Books" FontSize="25" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <ListBox x:Name="lstBorrowed" Height="250" DisplayMemberPath="Book.Title" FontSize="18"/>

            <Button Content="Return Book" Click="btnReturn_Click" Height="50" Margin="0,20" Background="DarkRed" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
